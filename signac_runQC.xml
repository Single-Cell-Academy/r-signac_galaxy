<tool id="signac_" name="Bold text here" version="0.1.0" python_template_version="3.5">
<description> details for tool here.</description>
<macros>
    <import>signac_macros.xml</import>
</macros>
<expand macro="requirements"/>
<stdio>
    <exit_code range="1:" />
</stdio>
<command><![CDATA[
    Rscript '${__tool_directory__}'/signac-.R --signac-object $signac_object --tss_threshold $tss_threshold --output-object-file $rds_signac_seurat_file --output-tss-plot $output_tss_plot --frag-history-plot $frag_history_plot 
]]></command>
<inputs>
    <param type="data" name="signac_object" label="Signac object." format="rdata" multiple="false" optional="false"/>
    <param type="select" name="" label="" multiple="false" format="text" optional="false">
        <option value=""></option>
        <option value=""></option>
    </param>
    <param type="select" name="" label="" multiple="false" format="text" optional="false">
    <param type="integer" name="tss_threshold" value="2" label=" Transcription start site (TSS) enrichment score threshold for considering cells with a high TSS enrichment for the TSS plot." multiple="false" optional="false"/> 
</inputs>
<outputs>
    <data name="rds_signac_seurat_file" format="rdata" label="${tool.name} on ${on_string}: Signac RDS"/>
    <output name="output_tss_plot" file="scATACseq.TSS_plot.png" compare="sim_size"/>
    <output name="frag_history_plot" file="scATACseq.fraghist_plot.png" compare="sim_size"/>
</outputs>
<help><![CDATA[
This tool runs the second step in the Signac pipeline, which will add gene annotations to the Signac object.
    ]]></help>
</tool>
